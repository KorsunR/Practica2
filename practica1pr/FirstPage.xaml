<Page x:Class="practica1pr.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:practica1pr"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FirstPage">

    <Grid>
        <DataGrid x:Name="ColorDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,99"/>
        <Button x:Name="ThreePage" Content="Добавить стиль" HorizontalAlignment="Left" Margin="400,397,0,0" VerticalAlignment="Top" Width="400" Click="ThreePage_Click" Height="43"/>
        <TextBox x:Name="ColorTextBox" HorizontalAlignment="Left" Margin="0,398,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="395" Height="42"/>

    </Grid>
</Page>
